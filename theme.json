{
	"settings": {
		"appearanceTools": true,
		"layout": {
			"contentSize": "1000px",
			"wideSize": "1320px"
		},
		"spacing": {
			"blockGap": null,
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFace": [
						{
							"fontFamily": "Material Icons",
							"fontStyle": "normal",
							"fontWeight": "400",
							"src": [
								"file:./assets/fonts/material-icons_normal_400.ttf"
							]
						}
					],
					"fontFamily": "Material Icons",
					"slug": "material-icons"
				},
				{
					"fontFace": [
						{
							"fontFamily": "Roboto",
							"fontStyle": "normal",
							"fontWeight": "300",
							"src": [
								"file:./assets/fonts/roboto_normal_300.ttf"
							]
						},
						{
							"fontFamily": "Roboto",
							"fontStyle": "normal",
							"fontWeight": "700",
							"src": [
								"file:./assets/fonts/roboto_normal_700.ttf"
							]
						}
					],
					"fontFamily": "Roboto",
					"slug": "roboto"
				}
			],
			"fontSizes": [
				{
					"name": "Small",
					"size": "clamp(14px, 4vw, 16px)",
					"slug": "small"
				},
				{
					"name": "Medium",
					"size": "clamp(18px, 4vw, 20px)",
					"slug": "medium"
				},
				{
					"name": "Large",
					"size": "clamp(22px, 4vw, 26px)",
					"slug": "large"
				},
				{
					"name": "X-Large",
					"size": "clamp(28px, 4vw, 36px)",
					"slug": "x-large"
				}
			]
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"blocks": {
			"core/button": {
				"typography": {
					"fontSize": "clamp(18px, 4vw, 20px)",
					"lineHeight": "clamp(28px, 4vw, 32px)"
				}
			},
			"core/columns": {
				"css": "gap: 25px;"
			},
			"core/group": {
				"spacing": {
					"padding": {
						"bottom": "var(--wp--preset--spacing--30)",
						"left": "var(--wp--preset--spacing--30)",
						"right": "var(--wp--preset--spacing--30)",
						"top": "var(--wp--preset--spacing--30)"
					}
				}
			},
			"core/heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--roboto)",
					"fontStyle": "normal",
					"fontWeight": "400"
				}
			},
			"core/navigation": {
				"css": "gap: 5px 20px;"
			},
			"core/paragraph": {
				"typography": {
					"fontSize": "clamp(18px, 4vw, 20px)",
					"lineHeight": "clamp(28px, 4vw, 32px)"
				}
			},
			"core/post-author": {
				"color": {
					"text": "var(--wp--preset--color--custom-color-4)"
				},
				"css": "align-items: center;\n& p { font-size: clamp(16px, 4vw, 20px) !important; }\n& img { border-radius: 50px; border: 1px solid; padding: 5px; }",
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--custom-color-4)"
						}
					}
				}
			},
			"core/post-author-biography": {
				"css": "font-size: clamp(16px, 4vw, 20px) !important;"
			},
			"core/post-template": {
				"css": "gap: 25px;\n& a {text-decoration: none;}"
			},
			"core/post-title": {
				"typography": {
					"fontStyle": "normal",
					"fontWeight": "400"
				}
			},
			"core/site-logo": {
				"css": "&.logo-30 {flex-basis:30px;}"
			}
		},
		"color": {
			"text": "var(--wp--preset--color--black)"
		},
		"elements": {
			"button": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--roboto)"
				}
			},
			"caption": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--roboto)"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "clamp(36px, 4vw, 46px)"
				}
			},
			"h2": {
				"spacing": {
					"margin": {
						"bottom": "20px",
						"left": "0",
						"right": "0",
						"top": "10px"
					}
				},
				"typography": {
					"fontSize": "clamp(26px, 4vw, 30px)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "clamp(20px, 4vw, 22px)"
				}
			},
			"heading": {
				"color": {
					"text": "var(--wp--preset--color--black)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--roboto)",
					"fontStyle": "normal",
					"fontWeight": "700"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--custom-color-4)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--roboto)",
					"lineHeight": "1.5"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--roboto)",
			"fontStyle": "normal",
			"fontWeight": "400"
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header"
		},
		{
			"area": "footer",
			"name": "footer"
		}
	],
	"version": 2,
	"$schema": "https://schemas.wp.org/wp/6.4/theme.json"
}